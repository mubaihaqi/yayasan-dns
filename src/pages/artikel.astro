---
import PageLayout from "../layouts/PageLayout.astro";
import articles from "../data/articles.json";
---

<PageLayout title="Artikel - Yayasan DNS">
  <div class="container mx-auto pt-32 px-4">
    <h1 class="text-4xl font-bold text-center mb-12">Artikel Terbaru</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {articles.map((article) => (
        <a href={`/artikel/${article.slug}`} class="group block bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden h-full flex flex-col">
          <img src={article.img} alt={article.title} class="w-full h-48 object-cover rounded-t-xl" />
          <div class="p-6 flex flex-col flex-grow">
            <h2 class="text-xl font-semibold mb-2 text-bghd group-hover:text-btn transition-colors duration-300">{article.title}</h2>
            <div class="text-gray-600 text-sm mb-4 line-clamp-3" set:html={article.content} />
            <p class="text-gray-500 text-xs mt-auto">Oleh: {article.author} | Sumber: {article.source}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>