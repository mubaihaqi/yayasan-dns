---
import PageLayout from "../../layouts/PageLayout.astro";
import articles from "../../data/articles.json";

export async function getStaticPaths() {
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
---

<PageLayout title={article.title}>
  <div class="container mx-auto pt-32 px-4 pb-16">
    <article class="bg-white rounded-xl shadow-lg p-6 lg:p-10 grid grid-cols-1 lg:grid-cols-4 gap-8 lg:gap-12 font-serif">
      <div class="lg:col-span-3 border-r border-gray-200 pr-8 lg:pr-12">
        <img
          src={article.img}
          alt={article.title}
          class="w-full h-64 object-cover rounded-lg mb-8 border border-gray-100"
        />
        <h1 class="text-5xl font-bold mb-4 text-bghd leading-tight">{article.title}</h1>
        <p class="text-gray-600 text-md mb-6 pb-4 border-b border-gray-200 font-medium">
          Oleh: {article.author} | Sumber: {article.source}
        </p>
        <div class="prose prose-xl max-w-none text-gray-700 leading-relaxed mt-8" set:html={article.content} />
      </div>
      <aside class="lg:col-span-1 pt-8 lg:pt-0">
        <h2 class="text-2xl font-bold mb-4 text-bghd border-b border-gray-200 pb-2">Artikel Lainnya</h2>
        <ul class="space-y-6 mt-4">
          {articles.slice(0, 3).map((relatedArticle) => (
            <li>
              <a href={`/artikel/${relatedArticle.slug}`} class="block p-3 rounded-lg hover:bg-gray-50 transition-colors duration-300 border border-gray-100">
                <h3 class="font-semibold text-bghd hover:text-btn transition-colors duration-300 text-lg">{relatedArticle.title}</h3>
                <p class="text-gray-500 text-sm line-clamp-2">{relatedArticle.content.replace(/<[^>]*>?/gm, '')}</p>
              </a>
            </li>
          ))}
        </ul>
      </aside>
    </article>
  </div>
</PageLayout>