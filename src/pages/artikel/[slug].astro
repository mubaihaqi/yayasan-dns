---
import Layout from "../../layouts/Layout.astro";
import articles from "../../data/articles.json";
import "../../styles/contact-card.css";

export async function getStaticPaths() {
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
---

<Layout>
  <div class="bg-background text-primary bg-grid-texture">
    <div class="container mx-auto pt-32 pb-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center mt-4 md:mt-8 px-6 mb-8 md:mb-16">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-primary mb-4">
          {article.title}
        </h1>
        <p class="text-lg text-btn max-w-2xl mx-auto">
          Oleh: {article.author} | Sumber: {article.source}
        </p>
      </div>

      <div class="card border border-primary/30 rounded-lg overflow-hidden">
        <div class="article-content p-6 lg:p-8">
          <img
            src={article.img}
            alt={article.title}
            class="w-full h-64 md:h-96 object-cover rounded-lg mb-8 border border-primary/30"
          />
          
          <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed" set:html={article.content} />
          
          <!-- Related Articles Section -->
          <div class="mt-12 pt-8 border-t border-gray-200">
            <h2 class="text-2xl font-bold mb-6 text-primary">Artikel Lainnya</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {articles
                .filter(a => a.slug !== article.slug) // Exclude current article
                .slice(0, 3)
                .map((relatedArticle) => (
                  <a 
                    href={`/artikel/${relatedArticle.slug}`} 
                    class="block p-4 rounded-lg hover:bg-gray-50 transition-colors duration-300 border border-primary/30 hover:border-button group"
                  >
                    <img 
                      src={relatedArticle.img} 
                      alt={relatedArticle.title} 
                      class="w-full h-40 object-cover rounded-md mb-3"
                    />
                    <h3 class="font-semibold text-primary group-hover:text-button transition-colors duration-300 text-lg mb-2">
                      {relatedArticle.title}
                    </h3>
                    <p class="text-gray-600 text-sm line-clamp-2">
                      {relatedArticle.content.replace(/<[^>]*>?/gm, '').substring(0, 100)}...
                    </p>
                  </a>
                ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>