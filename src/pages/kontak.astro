---
import PageLayout from "../layouts/PageLayout.astro";
import Map from "../components/react-components/Map.jsx";
---

<PageLayout>
  <div class="container mx-auto pt-32 px-4">
    <h1 class="text-4xl font-bold text-center mb-12">Kontak</h1>

    <!-- Section 1: Kontak dan Pesan -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
      <!-- Box Kontak (Kiri) -->
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6 text-bghd">Detail Kontak</h2>
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="bg-btn rounded-lg p-3 mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">Telepon</h3>
              <p class="text-gray-600">+62 821 4142 3737</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="bg-btn rounded-lg p-3 mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">Email</h3>
              <p class="text-gray-600">info@yayasandns.org</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="bg-btn rounded-lg p-3 mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">Alamat</h3>
              <p class="text-gray-600">
                Jl. KH. Hasyim Asyari No. 99A<br />Genteng, Banyuwangi<br />Jawa
                Timur, Indonesia
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Box Pesan (Kanan) -->
      <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6 text-bghd">Kirim Pesan</h2>
        <form class="space-y-4">
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-2"
              >Nama</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-btn focus:border-transparent"
              placeholder="Masukkan nama Anda"
              required
            />
          </div>

          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-btn focus:border-transparent"
              placeholder="Masukkan email Anda"
              required
            />
          </div>

          <div>
            <label for="message" class="block text-gray-700 font-medium mb-2"
              >Pesan</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-btn focus:border-transparent"
              placeholder="Tulis pesan Anda di sini..."
              required></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-btn hover:bg-hvrbtn text-white font-semibold py-3 px-4 rounded-lg transition duration-300 transform hover:scale-105"
          >
            Kirim Pesan
          </button>
        </form>
      </div>
    </div>

    <!-- Section 2: Map -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-bghd text-center">Lokasi Kami</h2>
      <Map client:load />
    </div>
  </div>
</PageLayout>
